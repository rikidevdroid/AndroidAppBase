<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="471dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/signin_motive" />

    <ImageView
        android:id="@+id/id_resaa_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/id_resaa_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <TextView
        android:textColor="@color/white"
        android:textSize="30sp"
        android:id="@+id/id_resaa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resaa_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/id_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_splash_divider"
        app:layout_constraintBottom_toTopOf="@+id/id_resaa_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/id_resaa_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resaa_persian"
        app:layout_constraintBottom_toTopOf="@+id/id_resaa_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.75"
        />


</android.support.constraint.ConstraintLayout>